{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "nix-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_FIND_FRAMEWORK": "LAST",
        "CMAKE_FIND_PACKAGE_PREFER_CONFIG": "ON",
        "CMAKE_FIND_USE_SYSTEM_PACKAGE_REGISTRY": "OFF",
        "CMAKE_FIND_USE_PACKAGE_REGISTRY": "OFF",
        "CMAKE_OSX_SYSROOT": "",
        "VAST_ENABLE_DEVELOPER_MODE": "ON",
        "VAST_ENABLE_LSVAST": "ON",
        "VAST_ENABLE_MDX_REGENERATE": "ON",
        "VAST_PLUGINS": "${sourceDir}/plugins/broker;${sourceDir}/plugins/pcap;${sourceDir}/plugins/sigma;${sourceDir}/plugins/summarize"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "environment": {
        "LDFLAGS": "-fuse-ld=lld"
      }
    },
    {
      "name": "nix-clang-debug",
      "inherits": ["nix-base", "clang-base"],
      "displayName": "Clang Debug Config",
      "binaryDir": "${sourceDir}/build/clang/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/clang/debug",
        "VAST_ENABLE_ASAN": "ON",
        "VAST_ENABLE_BUNDLED_CAF": "ON",
        "VAST_PLUGINS": "${sourceDir}/plugins/pcap;${sourceDir}/plugins/sigma;${sourceDir}/plugins/summarize"
      }
    },
    {
      "name": "nix-clang-redeb",
      "inherits": ["nix-base", "clang-base"],
      "displayName": "Clang Redeb Config",
      "binaryDir": "${sourceDir}/build/clang/redeb",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/clang/redeb",
        "VAST_ENABLE_BUNDLED_CAF": "OFF"
      }
    },
    {
      "name": "nix-clang-release",
      "inherits": ["nix-base", "clang-base"],
      "displayName": "Clang Release Config",
      "binaryDir": "${sourceDir}/build/clang/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/clang/release",
        "VAST_ENABLE_BUNDLED_CAF": "OFF"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "nix-gcc-debug",
      "inherits": ["nix-base", "gcc-base"],
      "displayName": "GCC Debug Config",
      "binaryDir": "${sourceDir}/build/gcc/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc/debug",
        "VAST_ENABLE_ASAN": "ON",
        "VAST_ENABLE_BUNDLED_CAF": "ON",
        "VAST_PLUGINS": "${sourceDir}/plugins/pcap;${sourceDir}/plugins/sigma;${sourceDir}/plugins/summarize"
      },
      "environment": {
        "LDFLAGS": "-fuse-ld=lld"
      }
    },
    {
      "name": "nix-gcc-redeb",
      "inherits": ["nix-base", "gcc-base"],
      "displayName": "GCC Redeb Config",
      "binaryDir": "${sourceDir}/build/gcc/redeb",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc/redeb",
        "VAST_ENABLE_BUNDLED_CAF": "OFF"
      },
      "environment": {
        "LDFLAGS": "-fuse-ld=lld"
      }
    },
    {
      "name": "nix-gcc-release",
      "inherits": ["nix-base", "gcc-base"],
      "displayName": "GCC Release Config",
      "binaryDir": "${sourceDir}/build/gcc/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc/release",
        "VAST_ENABLE_BUNDLED_CAF": "OFF"
      },
      "environment": {
        "LDFLAGS": "-fuse-ld=gold"
      }
    },
    {
      "name": "nix-static",
      "inherits": ["nix-base"],
      "hidden": true,
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_TESTING": "OFF",
        "CMAKE_C_COMPILER": "x86_64-unknown-linux-musl-gcc",
        "CMAKE_CXX_COMPILER": "x86_64-unknown-linux-musl-g++",
        "CMAKE_SYSTEM_NAME": "Linux",
        "CMAKE_SYSTEM_PROCESSOR": "x86_64",
        "CPACK_GENERATOR": "DEB",
        "CPACK_PACKAGING_INSTALL_PREFIX": "/opt",
        "CPACK_PACKAGE_CONTACT": "engineering@tenzir.com",
        "VAST_ENABLE_BACKTRACE": "ON",
        "VAST_ENABLE_BUNDLED_CAF": "OFF",
        "VAST_ENABLE_JEMALLOC": "ON",
        "VAST_ENABLE_RELOCATABLE_INSTALLATIONS": "ON",
        "VAST_ENABLE_UNIT_TESTS": "OFF",
        "VAST_ENABLE_STATIC_EXECUTABLE": "ON"
      }
    },
    {
      "name": "nix-gcc-static-debug",
      "inherits": ["nix-static"],
      "displayName": "GCC Static Debug Config",
      "binaryDir": "${sourceDir}/build/gcc-static/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc-static/debug"
      }
    },
    {
      "name": "nix-gcc-static-redeb",
      "inherits": ["nix-static"],
      "displayName": "GCC Static Redeb Config",
      "binaryDir": "${sourceDir}/build/gcc-static/redeb",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc-static/redeb"
      }
    },
    {
      "name": "nix-gcc-static-release",
      "inherits": ["nix-static"],
      "displayName": "GCC Static Release Config",
      "binaryDir": "${sourceDir}/build/gcc-static/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/gcc-static/release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "nix-clang-debug",
      "configurePreset": "nix-clang-debug"
    },
    {
      "name": "nix-clang-redeb",
      "configurePreset": "nix-clang-redeb"
    },
    {
      "name": "nix-clang-release",
      "configurePreset": "nix-clang-release"
    },
    {
      "name": "nix-gcc-debug",
      "configurePreset": "nix-gcc-debug"
    },
    {
      "name": "nix-gcc-redeb",
      "configurePreset": "nix-gcc-redeb"
    },
    {
      "name": "nix-gcc-release",
      "configurePreset": "nix-gcc-release"
    },
    {
      "name": "nix-gcc-static-debug",
      "configurePreset": "nix-gcc-static-debug"
    },
    {
      "name": "nix-gcc-static-redeb",
      "configurePreset": "nix-gcc-static-redeb"
    },
    {
      "name": "nix-gcc-static-release",
      "configurePreset": "nix-gcc-static-release"
    }
  ]
}
