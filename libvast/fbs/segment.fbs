include "interval.fbs";
include "table_slice.fbs";
include "uuid.fbs";

namespace vast.fbs.segment;

/// A bundled sequence of table slices.
table v0 {
  /// The contained table slices.
  slices: [FlatTableSlice];

  /// A unique identifier.
  uuid: LegacyUUID;

  /// The ID intervals this segment covers.
  ids: [uinterval];

  /// The number of events in the store.
  events: ulong;

  /// Whether this segment has an "overflow" segment.
  //  An overflow segment is required when the total
  //  size of the flatbuffer exceeds 2GiB.
  overflow: bool;
}

union Segment {
  v0,
}

namespace vast.fbs;

table Segment {
  segment: segment.Segment;
}

root_type Segment;

file_identifier "vSEG";
